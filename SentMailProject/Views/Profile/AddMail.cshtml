@model SentMailProject.Models.DTO.SentMailAddModel
@{
    ViewData["Title"] = "AddMail";
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="row">
    <div class="mx-auto">
        <div class="card" style="width: 38rem;">
            <div class="card-body" style="min-height:20rem;">
                <div class="mt-4">
                    <form class="container" method="post" >
                        <div class="form-group row">
                            <h6 class="card-subtitle mb-2 text-muted col-sm-3"> Alıcı: </h6>
                            <div class="col-sm-8">
                                <input type="email" class="form-control" name="ToWhoUserEmail" placeholder="Alıcı Email">
                            </div>
                        </div>
                        <div class="form-group row">
                            <h6 class="card-subtitle mb-2 text-muted col-sm-3"> Gönderen: </h6>
                            <div class="col-sm-8">
                                <input type="email" class="form-control" name="SenderUserEmail" value="@Model.SenderUserEmail" readonly>
                            </div>
                        </div>
                        <div class="form-group row">
                            <h6 class="card-subtitle mb-2 text-muted col-sm-3"> Konu: </h6>

                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="Subject" placeholder="Konu">
                            </div>
                        </div>
                        <fieldset class="form-group">
                            <div class="row">
                                <h6 class="card-subtitle mb-2 text-muted col-sm-3"> Mesaj: </h6>
                                <div class="col-sm-8">
                                    <textarea class="form-control" rows="3" name="Message" placeholder="Mesaj"></textarea>
                                </div>
                            </div>
                        </fieldset>

                        <div class="form-group row">
                            <div class="col-sm-6">
                                <button type="submit" class="btn btn-outline-primary">Gönder</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
